<section id="contact" class="contact">
<div class="container aos-init aos-animate">
<div class="col-lg-5">
<%= form_with model: @projects, :html => {:class => "php-email-form"} do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "col-md-4 control-label" %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% @projects.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control" %><br>
    <% @projects.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.text_area :description2, class: "form-control" %>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
    <%= form.label :start_date %><br>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-4 mt-3 mt-md-0">
    <%= form.label :end_date %><br>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>
  </div>

  <div>
    <%= form.collection_select :role, Project::Role, :to_s, :to_s, 
       :include_blank => true %>
  </div>

<ul class="list-group">
<div>
  <h6>Grant Number:</h6>
    <%= form.text_area :grant_number, class: "form-control" %>
  </div>
  <div>
  <h6>URL:</h6>
    <%= form.text_area :url_project, class: "form-control" %>
  </div>
  <div>
<%= form.radio_button :relationship, "child" %>
<%= form.label :relationship_part, "Part of" %>
<%= form.radio_button :relationship, "adult" %>
<%= form.label :relationship_self, "Self" %>
  </div>
</ul>

  <div class="text-center">
    <%= form.submit %>
  </div>
<% end %>
  </div>
</div>
</section>
