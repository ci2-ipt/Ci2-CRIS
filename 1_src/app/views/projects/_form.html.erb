<%= form_with model: @projects, :html => {:class => "php-email-form"} do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "col-md-4 control-label" %><br>
    <%= form.text_field :title %>
    <% @projects.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @projects.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.text_area :description2 %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.date_field :start_date %>
    </div>
    <div class="form-group col-md-6">
      <%= form.date_field :end_date %>
    </div>
  </div>

  <div>
    <%= form.collection_select :role, Project::Role, :to_s, :to_s, 
       :include_blank => true %>
  </div>

<ul class="list-group">
<div>
  <h6>Grant Number:</h6>
    <%= form.text_area :grant_number %>
  </div>
  <div>
  <h6>URL:</h6>
    <%= form.text_area :url_project %>
  </div>
  <div>
<%= form.radio_button :relationship, "child" %>
<%= form.label :relationship_part, "Part of" %>
<%= form.radio_button :relationship, "adult" %>
<%= form.label :relationship_self, "Self" %>
  </div>
</ul>


  <div>
    <%= form.submit %>
  </div>
<% end %>