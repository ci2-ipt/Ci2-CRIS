<h1>New Article</h1>

<%= form_with model: @projects do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @projects.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @projects.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
